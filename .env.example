# =============================================================================
# TechSupport Manager - Variáveis de Ambiente
# =============================================================================
# Copie este arquivo para .env e configure os valores adequados
# NUNCA commite o arquivo .env no repositório!
# =============================================================================

# -----------------------------------------------------------------------------
# Ambiente
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# Segurança
# -----------------------------------------------------------------------------
# Gere uma chave secreta única com: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=sua-chave-secreta-aqui-minimo-50-caracteres-aleatorios

# -----------------------------------------------------------------------------
# Banco de Dados (PostgreSQL) - Etapa 2+
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://techsupport_user:sua_senha_segura@localhost:5432/techsupport_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=techsupport_db
DATABASE_USER=techsupport_user
DATABASE_PASSWORD=sua_senha_segura

# -----------------------------------------------------------------------------
# Message Broker (RabbitMQ) - Etapa 4+
# -----------------------------------------------------------------------------
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# -----------------------------------------------------------------------------
# Cache (Redis) - Etapa 4+
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# -----------------------------------------------------------------------------
# Email (SMTP) - Opcional
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_app

# -----------------------------------------------------------------------------
# Aplicação
# -----------------------------------------------------------------------------
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# SLA Padrões (em horas) - Customizável
# -----------------------------------------------------------------------------
SLA_CRITICA_HORAS=4
SLA_ALTA_HORAS=24
SLA_MEDIA_HORAS=72
SLA_BAIXA_HORAS=168
